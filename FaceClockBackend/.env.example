# MongoDB Connection URI
# Local MongoDB: mongodb://localhost:27017/Employees
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/Employees?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/Employees

# Server Port
# Render sets this automatically, but use as fallback
PORT=5000

# Encryption Key for face embeddings
# Generate a random 64-character hex string using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-here

# Node Environment
NODE_ENV=development

# Auto Reports
REPORT_TIMEZONE=Africa/Johannesburg

# SMTP (Email reports)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_FROM_NAME=Biometric Attendance System

# WhatsApp (future integration)
WHATSAPP_API_URL=

# Client login URL (used in registration emails)
PORTAL_LOGIN_URL=
