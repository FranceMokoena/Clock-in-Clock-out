{
  "name": "faceclock-desktop",
  "version": "1.0.0",
  "description": "Face-clock Desktop application for Admin and Host Company management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:electron": "electron .",
    "dev:react": "cross-env BROWSER=none PORT=3000 react-scripts start",
    "dev:start": "npm run dev:react & npm run dev:electron",
    "build": "react-scripts build",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "internship",
    "management"
  ],
  "author": "Internship Success",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.20.0",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.7.3",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18 <19"
  },
  "build": {
    "appId": "com.faceclock.desktop",
    "productName": "Face-clock Desktop",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/app-icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://clock-in-app.duckdns.org/desktop-updates"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
