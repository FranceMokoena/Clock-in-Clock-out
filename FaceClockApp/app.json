{
  "expo": {
    "name": "Internship Success Clock-in/Clock-out System",
    "slug": "internship-success-clock",
    "version": "1.0.2",
    "orientation": "default",
    "icon": "./assets/APP-ICON.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/APP-ICON.png",
      "resizeMode": "contain",
      "backgroundColor": "#020617"
    },
    "ios": {
      "bundleIdentifier": "com.internshipsuccess.clock",
      "buildNumber": "1",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to register staff faces and for clock-in/clock-out functionality.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save face images."
      }
    },
    "android": {
      "package": "com.internshipsuccess.clock",
      "versionCode": 3,
      "adaptiveIcon": {
        "foregroundImage": "./assets/APP-ICON.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FaceClockApp to access your camera to register faces and clock in/out."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "javaVersion": "17"
          }
        }
      ],
      "./app.plugin.js",
      "expo-asset"
    ],
    "extra": {
      "eas": {
        "projectId": "4184cfe3-9b6a-4626-836e-cdda4704f826"
      }
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/4184cfe3-9b6a-4626-836e-cdda4704f826"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
